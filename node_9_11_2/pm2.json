{
    "apps" : [
      {
        "name": "accounts",
        "script": "server.js",
        "env": {
          "PORT": 3003,
          "NODE_ENV": "dev",
          "DEBUG": "accounts*"
        },
        "env_production": {
          "PORT": 8080,
          "NODE_ENV": "production",
          "DEBUG": "accounts*",
          "ALL": true,
          "DEBUG_HIDE_DATE": true
        },
        "log_date_format"   : "YYYY-MM-DDTHH:mm:ss.sssZ",
        "merge_logs"        : false,
        "watch"             : true,
        "exec_mode"         : "fork"
      }
    ]
  }